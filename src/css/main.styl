//=======================
// Custom styles
//=======================

// To use images in assets folder:
// ex: background-image url($assets-path + 'filename.jpg')

// See `base` folder for variables (color, font, media queries)

$binge = #F7BE7F
$heavy = #691A40
$bg-color = #f9f7f1

.wrapper
	padding 1em
	background-color $bg-color
	border-top 5px solid darken($bg-color, 5)
	border-bottom @border-top

.chart
	margin-bottom 3rem
	+mq('bp-2')
		margin-bottom 6rem
	&__copy
		font-family $benton
		font-size 1rem
		line-height 1.8
	&__chatter
		font-family $benton
		font-size 0.85rem
		line-height 1.8
		margin-bottom 1em
		+mq('bp-2')
			margin-bottom 0
	&__overline
		font-family $benton
		font-weight bold
		text-transform uppercase
		font-size 0.8rem
		letter-spacing 0.05em
		border-bottom 1px solid darken($bg-color, 8)
		padding-bottom 0.5em
		margin-bottom 0.5em
		display block
	&__list
		margin 2em 0
		list-style none
		display flex
		flex-direction column
		+mq('bp-2')
			flex-direction row
	&__item
		width 100%
		&:not(:last-child)
			margin-bottom 3rem
		+mq('bp-2')
			width 50%
			// flex 1 0 50%
			&:first-child
				padding-right 1.5em
			&:last-child
				padding-left 1.5em
			&:not(:last-child)
				margin-bottom 0

mark
	background-color transparent
[class*='mark']
	padding 0.15em 0.35em
	font-weight bold
	border-radius 3px
.mark--binge
	background-color rgba($binge, 0.5)
.mark--heavy
	background-color rgba($heavy, 0.35)

abbr
	text-decoration none


svg
	display block
	width 100%
	// max-width 20rem
	height 100%
	// max-height 20rem
	text:not([fill='none'])
		font-family $benton
		font-size 8px
		fill #666
	.stroke--binge
		stroke $binge
	.stroke--heavy
		stroke $heavy
	[class*='stroke']
		opacity 0.9

.legend
	font-family $benton
	> *
		display inline-block
	&__term
		margin-bottom 0.25rem
		text-transform uppercase
		letter-spacing 0.05em
		font-size 0.7rem
	&__def
		margin-bottom 1.5rem
		font-size 0.85rem
		line-height 1.5

.source-and-credit
	margin-top 1rem
	display flex
	justify-content space-between
	flex-direction column
	// +mq('bp-2')
	// 	margin-top 5rem
	+mq('bp-3')
		// margin-top 5rem
		flex-direction row
		